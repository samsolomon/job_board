<%= simple_form_for(@job, html: { class: 'form-horizontal'}) do |f| %>
  <%= f.input :title, label: "Job Title", input_html: { class: "form-control" } %>
  <%= f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category" }, input_html: { class: "dropdown-toggle" } %>
  <%= f.input :location, label: "Location", input_html: { class: "form-control" } %>
  <%= f.input :description, label: "Job Description",
    input_html: { class: "form-control", rows: 6 },
    as: :bootsy,
    editor_options: { blockquote: false, font_styles: false, image: false, color: false, link: false } %>
  <%= f.input :how_to_apply, label: "How do people apply for this job?",
    input_html: { class: "form-control", rows: 4 } %>
  <br/>
  <%= f.input :company, label: "Company Name", input_html: { class: "form-control" } %>
  <%= f.input :url, label: "Company URL", input_html: { class: "form-control" } %>
  <%= f.input :email, label: "Email", input_html: { class: "form-control" } %>
  <br/>
  <%= f.button :submit %>
<% end %>
